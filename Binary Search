class Solution {
    public int search(int[] nums, int target) {
        // we start from initial 
        int start=0;
        int end= nums.length-1;
        // use while loop starting to end, run the probleam
        while(start<= end){
            // find mid we also use (start+end)/2 , use for small size in array.
            // but we use start+(end-start)/2 because in large array size it's give clear value.Â  
            int mid= start+(end-start)/2;
            if(nums[mid]==target){
               return mid;
            } else if(nums[mid]< target){
                 start= mid+1;
            }else if(nums[mid]> target){
               end= mid-1;
            }
        }
        return -1;
    }
}